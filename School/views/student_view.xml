        <record id="view-detail-student-form" model="ir.ui.view">
            <field name="name">res.student.form.detail</field>
            <field name="model">student.student</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <form string="Học sinh">
                    <field name="image" widget='image' class="oe_avatar" options='{"preview_image": "image"}'/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nhập vào tên học sinh"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="gender"/>
                            <field name="student_dob"/>
                            <label for="grade" string="Lớp học"/>
                            <div class="o_class_format">
                                <field name="grade" placeholder="Khối lớp" class="o_class_grade"/>

                                <field name="subname" placeholder="Tên lớp" class="o_address_subname"/>

<!--                                <field name="Nationality" placeholder="Quốc gia" class="o_address_country" options='{"no_open": True, "no_create": True}'/>-->
                            </div>
                            <label for="street" string="Địa chỉ"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Tên đường" class="o_address_street"/>

                                <field name="city" placeholder="Tỉnh thành" class="o_address_city"/>


                                <field name="Nationality" placeholder="Quốc gia" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                            </div>
                        </group>
                        <group>
                        </group>
                    </group>
                </form>
            </field>
        </record>
        <menuitem id="school_menu"
                  name="School"/>
        <menuitem id="school_student_menu"
                  parent="school_menu"
